<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE Config SYSTEM "http://pi.informatik.uni-siegen.de/SiDiff/Editrulesgeneratorconfig.dtd" >
<Config>
	<GeneralSettings>
		<preventInconsistency value="true" />
		<multiplicityPreconditions integrated="false" separately="false" />
		<reduceToSuperType  CREATE_DELETE="true" MOVE="true" SET_UNSET="false" ADD_REMOVE="true" CHANGE="true" />
		<disableVariants value="false"/>
   		<modelUsesProfileMechanism value="false"/>
	</GeneralSettings>
	
	<MetaModelSettings>
		<MainModel nsUri="http://www.eclipse.org/uml2/4.0.0/UML" />
		<RequiredModel nsUri="http://www.eclipse.org/uml2/4.0.0/Types" />
		<RequiredModel nsUri="http://www.eclipse.org/emf/2002/Ecore" />	
		<!-- 
		<Constraints>
			<NameUniqueness scope="local" eClass="NamedElement" eAttributeName="name" eAttributeIsInherited="false"  overrideInheritedConstraintsIfAny="false" applyOnSubTypes="true"/>			
		</Constraints>
		 -->
		<MaskedClassifiers>
			<Mask name="InitialPseudostate" eClass="Pseudostate" eAttribute="kind" eAttributeValue="initial" />
			<Mask name="ChoicePseudostate" eClass="Pseudostate" eAttribute="kind" eAttributeValue="choice" />
			<Mask name="DeepHistoryPseudostate" eClass="Pseudostate" eAttribute="kind" eAttributeValue="deepHistory" />
			<Mask name="ShallowHistoryPseudostate" eClass="Pseudostate" eAttribute="kind" eAttributeValue="shallowHistory" />
			<Mask name="JoinPseudostate" eClass="Pseudostate" eAttribute="kind" eAttributeValue="join" />
			<Mask name="ForkPseudostate" eClass="Pseudostate" eAttribute="kind" eAttributeValue="fork" />
			<Mask name="JunctionPseudostate" eClass="Pseudostate" eAttribute="kind" eAttributeValue="junction" />
			<Mask name="EntryPointPseudostate" eClass="Pseudostate" eAttribute="kind" eAttributeValue="entryPoint" />
			<Mask name="ExitPointPseudostate" eClass="Pseudostate" eAttribute="kind" eAttributeValue="exitPoint" />
			<Mask name="TerminatePseudostate" eClass="Pseudostate" eAttribute="kind" eAttributeValue="terminate" />	
		</MaskedClassifiers>
	</MetaModelSettings>
	
	<Transformations>
		<Creates allow="true" />
		<Deletes allow="true" />
		<Moves allow="true" allowReferenceSwitching="false" />
		<Sets allow="true" />
		<Unsets allow="true" />
		<Adds allow="true" />
		<Removes allow="true" />
		<Changes allow="true" allowLiteralSwitching="false"/>
	</Transformations>

	<!-- nested=true: means the root element can also appear
	somewhere in its lower containments (eg. (Sub-)StateMachine)-->
	<Root name="StateMachine" nested="true"/>
	
	<WhiteList>	
			
		<EClass name="StateMachine" />
		<EClass name="State" />
		<EClass name="Pseudostate" />
		<EClass name="Region" />
		<EClass name="ConnectionPointReference" />
		<EClass name="Transition" />
		<EClass name="Trigger" />
		<!--  Using "Constraint" is not adviced when MOVEs, which include switching of references, are enabled -->
		<!-- <EClass name="Constraint" /> -->
		<EClass name="Behavior" />
		
	</WhiteList>
	
	<BlackList>
		
		<EClass name="Constraint" />
	
	</BlackList>
	
</Config>