<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eclipse.ui.commands">
      <command
            category="org.silift.patching.patch.ui"
            id="org.silift.patching.patch.ui.createPatch"
            name="CreatePatch">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="org.sidiff.patching.patch.ui.handler.CreatePatchHandler"
            commandId="org.silift.patching.patch.ui.createPatch">
         <activeWhen>
            <reference
                  definitionId="org.sidiff.difference.lifting.ui.definition.modelFiles">
            </reference></activeWhen>
      </handler>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            allPopups="false"
            locationURI="popup:org.eclipse.ui.popup.any">
         <menu
               id="org.sidiff.patching.ui.menu"
               label="Sidiff Patching">
            <command
                  commandId="org.silift.patching.patch.ui.createPatch"
                  label="Create a Patch"
                  style="push">
            </command>
         </menu>
      </menuContribution>
   </extension>

</plugin>
