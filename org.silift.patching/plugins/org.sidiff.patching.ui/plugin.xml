<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eclipse.ui.views">
      <view
            class="org.sidiff.patching.ui.view.PatchView"
            id="org.sidiff.patching.ui.view.PatchView"
            name="Patch"
            restorable="true"
            icon = "icons/patch.png">
      </view>
      <view
            class="org.sidiff.patching.ui.view.ReportView"
            id="org.sidiff.patching.ui.view.ReportView"
            name="Report"
            restorable="true">
      </view>
   </extension>
   <extension point="org.eclipse.ui.commands">
      <command
            categoryId="org.silift.patching.ui.category.silift"
            id="org.sidiff.patching.ui.PatchApplyCommand"
            name="Apply Patch">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="org.sidiff.patching.ui.handler.PatchApplyHandler"
            commandId="org.sidiff.patching.ui.PatchApplyCommand">
         <activeWhen>
            <reference
                  definitionId="org.sidiff.patching.ui.patchApplyDefinition">
            </reference>
         </activeWhen>
      </handler>
   </extension>
      <extension point="org.eclipse.ui.menus">
  <menuContribution
        locationURI="popup:org.silift.menu?after=org.silift.patching.patch.ui.separator">
     <command
           commandId="org.sidiff.patching.ui.PatchApplyCommand"
           label="Apply Patch"
           tooltip="Apply a patch to a model">
     </command>
     <separator
           name="org.sidiff.patching.ui.separator"
           visible="false">
     </separator>
  </menuContribution>
  </extension>
   <extension
         point="org.eclipse.core.expressions.propertyTesters">
      <propertyTester
            class="org.sidiff.patching.ui.handler.PatchApplyPropertyTester"
            id="org.sidiff.patching.ui.patchApplyPropertyTester"
            namespace="org.sidiff.patching.ui.patchApplyPropertyTester"
            properties="patchFile"
            type="org.eclipse.core.resources.IFile">
      </propertyTester>
   </extension>
   <extension
         point="org.eclipse.core.expressions.definitions">
      <definition
            id="org.sidiff.patching.ui.patchApplyDefinition">
         <and>
            <count
                  value="1">
            </count>
            <iterate>
               <instanceof
                     value="org.eclipse.core.resources.IFile">
               </instanceof>
               <test
                     forcePluginActivation="true"
                     property="org.sidiff.patching.ui.patchApplyPropertyTester.patchFile">
               </test>
            </iterate>
         </and>
      </definition>
   </extension>
   <extension
         point="org.eclipse.core.runtime.adapters">
      <factory
            adaptableType="org.sidiff.patching.report.ReportEntry"
            class="org.sidiff.patching.ui.view.ReportEntryAdapterFactory">
         <adapter
               type="org.eclipse.ui.views.properties.IPropertySource">
         </adapter>
      </factory>
   </extension>
</plugin>
