<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>  
   <extension
         point="org.eclipse.ui.commands">
      <command
            id="org.sidiff.difference.mutation.ui.command.mutate"
            name="Mutate Model">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            allPopups="true"
            locationURI="popup:org.eclipse.ui.popup.any?after=additions">
         <command
               commandId="org.sidiff.difference.mutation.ui.command.mutate"
               disabledIcon="icons/icon.png"
               icon="icons/icon.png"
               label="Mutate Model"
               style="push"
               tooltip="Mutates the selected model">
         </command>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="org.sidiff.mutation.ui.handlers.MutateModelHandler"
            commandId="org.sidiff.difference.mutation.ui.command.mutate">
         <activeWhen>
            <reference
                  definitionId="org.sidiff.difference.mutation.ui.active">
            </reference></activeWhen>
      </handler>
   </extension>
   <extension
         point="org.eclipse.core.expressions.definitions">
      <definition
            id="org.sidiff.difference.mutation.ui.active">
         <with
               variable="selection">
            <iterate>
               <or>
                  <test
                        property="org.sidiff.difference.mutation.ui.properties.modelFile">
                  </test>
                  <instanceof
                        value="org.eclipse.core.resources.IFile">
                  </instanceof>
               </or>
            </iterate>
         </with>
      </definition>
   </extension>
   <extension
         point="org.eclipse.core.expressions.propertyTesters">
      <propertyTester
            class="org.sidiff.mutation.ui.handlers.ModelFilePropertyTester"
            id="org.sidiff.difference.mutation.ui.modelfilepropertytester"
            namespace="org.sidiff.difference.mutation.ui.properties"
            properties="modelFile"
            type="org.eclipse.core.resources.IFile">
      </propertyTester>
   </extension>

</plugin>
