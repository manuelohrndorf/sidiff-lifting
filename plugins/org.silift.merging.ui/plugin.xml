<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension point="org.eclipse.ui.commands">
      <command
            categoryId="org.silift.patching.ui.category.silift"
            id="org.silift.merging.ui.ThreeWayMergeCommand"
            name="3-Way-Merge">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="org.silift.merging.ui.handler.ThreeWayMergeHandler"
            commandId="org.silift.merging.ui.ThreeWayMergeCommand">
         <activeWhen>
            <reference
                  definitionId="org.silift.merging.ui.definition.threeWayMerge">
            </reference>
         </activeWhen>
      </handler>
   </extension>
   <extension point="org.eclipse.ui.menus">
  <menuContribution
        locationURI="popup:org.silift.menu?after=org.sidiff.patching.ui.separator">
     <command
           commandId="org.silift.merging.ui.ThreeWayMergeCommand"
           label="Three-Way-Merge"
           style="push"
           tooltip="Merge three models">
     </command>
     <separator
           name="org.silift.merging.ui.separator"
           visible="true">
     </separator>
  </menuContribution>
  </extension>
 <extension
         point="org.eclipse.core.expressions.definitions">
      <definition
            id="org.silift.merging.ui.definition.threeWayMerge">
         <with
               variable="selection">
            <count
                  value="3">
            </count>
            <iterate
                  ifEmpty="false"
                  operator="and">
               <instanceof
                     value="org.eclipse.core.resources.IFile">
               </instanceof>
               <test
                     forcePluginActivation="true"
                     property="org.sidiff.difference.lifting.ui.properties.modelFile">
               </test>
            </iterate>
         </with>
      </definition>
   </extension>
</plugin>
