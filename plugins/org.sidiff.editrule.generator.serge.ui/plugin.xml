<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>  
   <extension
         point="org.eclipse.ui.commands">
      <command
            id="org.sidiff.serge.ui.wizard.command.generatecpeos"
            name="Generate CPEOs">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            allPopups="true"
            locationURI="popup:org.eclipse.ui.popup.any?after=additions">
         <menu
               id="org.sidiff.serge.ui.menu"
               label="SERGe">
            <command
                  commandId="org.sidiff.serge.ui.wizard.command.generatecpeos"
                  label="Generate CPEOs"
                  style="push"
                  tooltip="Generates CPEOs">
            </command>
         </menu>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="org.sidiff.editrule.generator.serge.ui.handlers.GenerateCPEOsHandler"
            commandId="org.sidiff.serge.ui.wizard.command.generatecpeos">
         <activeWhen>
            <reference
                  definitionId="org.sidiff.serge.ui.definition.sergefile">
            </reference></activeWhen>
      </handler>
   </extension>
   <extension
         point="org.eclipse.core.expressions.definitions">
      <definition
            id="org.sidiff.serge.ui.definition.sergefile">
         <with
               variable="selection">
            <count
                  value="1">
            </count>
            <iterate
                  ifEmpty="false"
                  operator="and">
               <test
                     forcePluginActivation="true"
                     property="org.sidiff.serge.ui.properties.sergeFile">
               </test>
            </iterate>
         </with>
      </definition>
   </extension>
   <extension
         point="org.eclipse.core.expressions.propertyTesters">
      <propertyTester
            class="org.sidiff.editrule.generator.serge.ui.handlers.SergeFilePropertyTester"
            id="org.sidiff.serge.ui.sergePropertyTester"
            namespace="org.sidiff.serge.ui.properties"
            properties="sergeFile"
            type="org.eclipse.core.resources.IFile">
      </propertyTester>
   </extension>

</plugin>
