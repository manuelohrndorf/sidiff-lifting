<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eclipse.ui.commands">
      <category
            id="org.silift.patching.ui.category.silift"
            name="SiLift">
      </category>
      <command
            categoryId="org.silift.patching.ui.category.silift"
            id="org.silift.patching.ui.createPatch"
            name="CreatePatch">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="org.sidiff.patching.patch.ui.handler.CreatePatchHandler"
            commandId="org.silift.patching.ui.createPatch">
         <activeWhen>
            <reference
                  definitionId="org.sidiff.difference.lifting.ui.definition.modelFiles">
            </reference></activeWhen>
      </handler>
   </extension>
   <extension point="org.eclipse.ui.menus">
  <menuContribution
        locationURI="popup:org.silift.menu?after=org.sidiff.difference.lifting.ui.separator">
     <command
           commandId="org.silift.patching.ui.createPatch"
           label="Create a Patch"
           style="push"
           tooltip="Create a patch between two models">
     </command>
     <separator
           name="org.silift.patching.patch.ui.separator"
           visible="false">
     </separator>
  </menuContribution>
  </extension>
   <extension
         point="org.eclipse.ui.navigator.viewer">
      <viewer
            viewerId="org.eclipse.ui.navigator.ProjectExplorer">
      </viewer>
      <viewerContentBinding
            viewerId="org.eclipse.ui.navigator.ProjectExplorer">
         <includes>
            <contentExtension
                  pattern="org.silift.patching.patch.ui.*">
            </contentExtension>
         </includes>
      </viewerContentBinding>
   </extension>
   <extension
         point="org.eclipse.ui.navigator.navigatorContent">
      <navigatorContent
            activeByDefault="true"
            contentProvider="org.silift.patching.patch.ui.PatchContentProvider"
            icon="icons/patch.png"
            id="org.silift.patching.patch.ui.navigator"
            labelProvider="org.silift.patching.patch.ui.PatchLabelProvider"
            name="SiLift Patch"
            priority="normal">
         <triggerPoints>
            <and>
               <instanceof
                     value="org.eclipse.core.resources.IFile">
               </instanceof>
               <test
                     property="org.eclipse.core.resources.extension"
                     value="slp">
               </test>
            </and>
         </triggerPoints>
         <possibleChildren>
            <instanceof
                  value="org.eclipse.core.resources.IFile">
            </instanceof>
         </possibleChildren>
      </navigatorContent>
   </extension>
   <extension
         point="org.eclipse.core.contenttype.contentTypes">
      <content-type
            file-extensions="slp"
            id="org.silift.patching.patch.ui.extension"
            name="SiLift Patch"
            priority="normal">
      </content-type>
   </extension>
   <extension
         point="org.eclipse.ui.editors">
      <editor
            default="true"
            icon="icons/patch.png"
            id="org.silift.patching.patch.ui.editor"
            launcher="org.silift.patching.patch.ui.PatchEditorLauncher"
            name="SiLift Patch Editor">
         <contentTypeBinding
               contentTypeId="org.silift.patching.patch.ui.extension">
         </contentTypeBinding>
      </editor>
   </extension>
</plugin>
